<p id="notice"><%= notice %></p>

<h1>Saques (<%= @withdraws.count %>)</h1>

<table class="table">
  <thead>
    <tr>
      <th>Conta</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @withdraws.each do |withdraw| %>
      <tr>
        <td><%= withdraw.account.name %></td>
        <td><%= real(withdraw.amount) %></td>
        <td><%= link_to 'Show', withdraw, class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Sacar', new_withdraw_path, class: 'btn btn-success' %>
