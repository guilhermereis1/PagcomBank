<%= form_with(model: transfer) do |form| %>
  <% if transfer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(transfer.errors.count, "error") %> prohibited this transfer from being saved:</h2>

      <ul>
        <% transfer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :account_id %>
    <%= form.select(:account_id, @user_accounts, { include_blank: "Selecione uma Conta" }, { :class => 'form-control' } ) %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.text_field :amount, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :account_to %>
    <%= form.select(:account_to, @all_user_accounts, { include_blank: "Selecione uma Conta" }, { :class => 'form-control' } ) %>
  </div>

  <div class="actions">
    <br>
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
