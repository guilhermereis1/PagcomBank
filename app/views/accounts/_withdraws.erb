<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#withdraw">
  Saques (<%= account.withdraw_references.count %>)
</button>

<div class="modal fade" id="withdraw" tabindex="-1" aria-labelledby="withdrawLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="withdrawLabel">Saques (<%= account.withdraw_references.count %>)</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <table class="table">
          <thead>
            <tr>
              <th>Conta</th>
              <th>Valor</th>
              <th>Data</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @account.withdraws.each do |withdraw| %>
              <tr>
                <td><%= withdraw.account.name %></td>
                <td><%= real(withdraw.amount) %></td>
                <td><%= br_date(withdraw.created_at) %></td>
                <td><%= link_to 'Show', withdraw, class: 'btn btn-primary' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
      </div>
    </div>
  </div>
</div>