<table class="table">
  <thead>
    <tr>
      <th scope="col">Tipo</th>
      <th scope="col">Valor</th>
      <th scope="col">Data</th>
    </tr>
  </thead>
  <tbody>
    <% @account_transactions.each do |transaction| %>
      <tr>
        <td><%= kind_account(transaction.class) %></td>
        <td><%= real(transaction.amount) %></td>
        <td><%= transaction.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>